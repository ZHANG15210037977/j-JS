//所有数据以json格式传输，前后台交互时记得转换数据为json型
//1.登陆接口
url: login.php                   //php文件名
type: post                      //请求方式
para: {                           //前端发送数据
	    "user_name": "13522222222",
		"paw": "xxxxxx"
}
response{                        //后台返回数据
	"status": 1,                //1验证成功，0验证失败
	"info": "发送成功",         //反馈信息
	"data": {                 //登陆成功反馈数据，若失败则为null
				"user": [更新后数据库中user表中对应用户的数据] , //表中没行数据为数组中的一个元素，元素为对象
			
				"goods":[更新后数据库中用户对应goods表中对应数据], //表中没行数据为数组中的一个元素，元素为对象
				
				"customer":[更新后数据库中用户对应customer表中的数据], //表中没行数据为数组中的一个元素，元素为对象
					
			}
}


//2.新账号数据初始化接口
url: initializd.php                     //php文件名
type: post                        //请求方式
para: {                           //前端发送数据
	"user_id":"1",     //用户id
	"morey":"200000", //初始现金
	"goods":[{//对象数组，每一元素为一种新增货物信息（名称，进价，售价）
				"name":"雪碧", //名称
				"input": "24.3",//进价
				"output": "32.1",//售价
				"number": "32"	//初始库存
					  
			}, 
			{
				"name":"可乐", //名称
				"input": "24.5",//进价
				"output": "32.1",//售价
				"number": "32"	//初始库存
			}]
}
response{                        //后台返回数据
			"status": "1",                //1初始化成功，0初始化失败
			"info": "初始化成功",         //反馈信息
			"data": {                 //初始化成功反馈数据，若失败则为null
				"user": [更新后数据库中user表中对应用户的数据] , //表中没行数据为数组中的一个元素，元素为对象
			
				"goods":[更新后数据库中用户对应goods表中对应数据], //表中没行数据为数组中的一个元素，元素为对象
				
				"customer":[更新后数据库中用户对应customer表中的数据], //表中没行数据为数组中的一个元素，元素为对象
					
			}
		}

//3.新增货物接口
url: addGodds.php                     //php文件名
type: post                        //请求方式
para: {                           //前端发送数据
		"user_id":"1",    //用户id
		"name":"可乐",    //名称
		"input": "24.5",  //进价
		"output": "32.1", //售价
		"goods_num":"5"   //当前货物种类数量。
	 }	
response{                        //后台返回数据
			"status": "1",                //1初增加成功，0初增加失败
			"info": "写入成功",         //反馈信息
			"data": null
		}

//4.货物信息修改接口
url: changeGodds.php                     //php文件名
type: post                         	  //请求方式
para: {  						      //前端发送数据
	    "user_id":"1",     			  //用户id
		"goods_id":"1",               //修改货物对应id    
		"name":"雪碧",    			  //货物名称修改为 雪碧
		"input": "24.5",  			 //进价修改为  24.5
		"output": "32.1", 			 //售价修改为  32.1
		"type":"0"					//将货物状态修改为0（无货）
	 }	
response{                            //后台返回数据
			"status": "1",                //1初修改成功，0初修改失败
			"info": "修改成功",           //反馈信息
			"data": null
		}


