.top {
  width: 100%;
  height: 70rpx;
  background: linear-gradient(180deg,#4e8efc,#38b9fd);
}

.center {
  width: 750rpx;
  height: 1044rpx;
  padding-top: 90rpx;
  background-color: #ffffff
}

.center .center-box{
  width: 540rpx;
  height: 954rpx;
  margin: 0 auto 90rpx;
}
.center .center-box image{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto 60px;
  display: block;
}
.center .center-box form{
  width: 540rpx;
  height: 654rpx;
  display: block;
}
.center .center-box form view{
  width: 540rpx;
  height: 40rpx;
  margin-top: 60rpx;
  color: #A3A3A3;
  font-size: 32rpx;
  line-height: 40rpx;
}
.center .center-box form input{
  width: 540rpx;
  height: 60rpx;
  margin-top: 10rpx;
  border-radius:8rpx; 
  background-color: #e3e3e3;
  text-align: center;
  font-size: 24rpx;
}
.center .center-box form navigator{
  position: relative;
  left: 468rpx;
  width: 72rpx;
  height: 60rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  color: #01A0EA;
  text-align: right;
}
.center .center-box form button{
  width: 210rpx;
  height: 90rpx;
  margin: 60rpx auto 0;
  background-color: #00a0e9;
  font-size: 50rpx;
  line-height: 90rpx;
  color: #ffffff;
}