/* leave.wxss */

page {
  height: 1182rpx;
  background-color: #929292;
}

.top {
  margin: 0 auto 30rpx;
  letter-spacing: 16rpx;
  color: #000;
  background: #fff;
}

.row {
  margin-top: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

form {
  display: block;
  width: 550rpx;
  padding: 48rpx;
  font-size: 22rpx;
  line-height: 36rpx;
  box-shadow: 0 0 10px #000;
  border-radius: 12rpx;
  background-color: #fff;
  margin: 100rpx auto 100rpx;
}

.row text {
  text-align: left;
  display: block;
  width: 180rpx;
  font-size: 24rpx;
  flex-grow: 1;
  color: #9e9e9e;
  font-weight: bold;
}

.row view {
  width: 356rpx;
  height: 54rpx;
  font-size: 18rpxrem;
  line-height: 54rpx;
  color: #000;
  flex-grow: 3;
  display: inline-block;
  border-radius: 6rpx;
  background-color: #e3e3e3;
  padding: 6rpx;
  text-align: center;
}

.row input {
  width: 356rpx;
  font-size: 18rpxrem;
  color: #000;
  flex-grow: 3;
  background-color: #e3e3e3;
  display: inline-block;
  border-radius: 6rpx;
  padding: 6rpx;
  text-align: center;
}

.row button {
  width: 140rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: right;
  padding: 0 12rpx;
  font-size: 36rpx;
  letter-spacing: 16rpx;
  background-color: #009fe8;
}

.row textarea {
  width: 370rpx;
  font-size: 36rpx;
  background-color: #e3e3e3;
  border-radius: 6rpx;
  text-align: left;
}

.leave_prove_box {
  width: 550rpx;
  height: 316rpx;
  background-color: #f2f2f2;
}

.leave_prove_box button {
  position: relative;
  top: 98rpx;
  width: 240rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #2277da;
}

.leave_prove_box image {
  width: 550rpx;
  height: 316rpx;
}

.leave_prove_box view {
  padding-top: 30rpx;
}

.leave_prove_box text {
  display: block;
  width: 550rpx;
  text-align: center;
}
