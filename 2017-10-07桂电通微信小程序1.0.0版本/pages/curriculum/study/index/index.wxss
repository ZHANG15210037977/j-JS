/* pages/curriculum/study/index/index.wxss */
.top {
  width: 100%;
  height: 70rpx;
  background: linear-gradient(90deg, #4e8efc, #38b9fd);
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

scroll-view {
  padding-bottom: 112rpx;
  display: block;
}

.center {
  width: 750rpx;
  background-color: #d6d5d6;
}

.center .more {
  width: 750rpx;
  height: 80rpx;
  padding: 10rpx 0 0;
  margin-bottom: 10rpx;
  background-color: #f4f4f4;
}

.center .more .and {
  position: relative;
  top: -8rpx;
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  line-height: 90rpx;
  font-size: 90rpx;
  font-weight: bold;
  text-align: center;
  color: #48a6fb;
}

.center .box {
  width: 750rpx;
  padding-bottom: 162rpx;
  background-color: #f4f4f4;
}

.center .box .message_box {
  width: 292rpx;
  height: 292rpx;
  margin-left: 50rpx;
  margin-top: 50rpx;
  float: left;
  border: 4rpx solid #808080;
}

.center .box .message_box .tap {
  width: 100%;
  height: 189rpx;
  padding-top: 30rpx;
}

.center .box .message_box .tap .title {
  width: 100%;
  margin: 0 auto;
  text-indent: 52rpx;
  font-size: 42rpx;
  line-height: 42rpx;
  font-weight: bolder;
  letter-spacing: 12rpx;
  font-family: '黑体';
  margin-bottom: 54rpx;
}

.center .box .message_box .tap .num {
  width: 280rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  text-align: right;
  margin-right: 12rpx;
}

.center .box .message_box .batton {
  width: 100%;
  height: 73rpx;
  background-color: #d6d6d6;
}

.center .box .message_box .batton .mores {
  float: right;
  margin-right:12rpx;
  margin: 14rpx 12rpx 10rpx 12rpx;
  width: 90rpx;
  height: 49rpx;
  font-size:28rpx;
  line-height: 49rpx;
  background-color: #009BE2;
  color: #ffffff;
  text-align: center;
  border-radius:4rpx; 
}

.center .no_message image {
  background-color: #f4f4f4;
  width: 750rpx;
  height: 980rpx;
}

