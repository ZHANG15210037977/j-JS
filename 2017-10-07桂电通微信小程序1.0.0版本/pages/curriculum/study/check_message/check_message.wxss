/* pages/curriculum/study/check_message/check_message.wxss */

.top {
  width: 100%;
  height: 70rpx;
  background: linear-gradient(90deg, #4e8efc, #38b9fd);
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

scroll-view {
  padding-bottom: 112rpx;
  display: block;
}

.center {
  width: 750rpx;
  background-color: #d6d5d6;
}

.center .more {
  width: 750rpx;
  height: 80rpx;
  padding: 10rpx 0 0;
  margin-bottom: 10rpx;
  background-color: #f4f4f4;
}

.center .more .and {
  position: relative;
  top: -8rpx;
  width: 100%;
  height: 90rpx;
  margin: 0 auto;
  line-height: 90rpx;
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  color: #48a6fb;
}

.center .no_message image {
  background-color: #f4f4f4;
  width: 750rpx;
  height: 930rpx;
}

.center .center_box {
  width: 750rpx;
  padding: 50rpx 40rpx 50rpx 50rpx;
  background-color: #f4f4f4;
}

.center .center_box .row {
  width: 660rpx;
  height: 80rpx;
}

.center .center_box .row .text {
  width: 500rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  letter-spacing: 4rpx;
  float: left;
}

.center .center_box .row .ok {
  position: relative;
  width: 120rpx;
  height: 60rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  margin-top: 10rpx;
  background: #00a0e8;
  border-radius: 8rpx;
  float: left;
  margin-left: 40rpx;
}

.center .center_box .row .no {
  background-color: #c1c1c1;
}
