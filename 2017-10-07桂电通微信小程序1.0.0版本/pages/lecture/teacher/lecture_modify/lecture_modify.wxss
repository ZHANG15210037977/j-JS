/* pages/lecture/teacher/lecture_modify/lecture_modify.wxss */
page{
  background-color: #929292;
}
.row{
  margin-top: 50rpx;
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.top{
  width: 500rpx;
  margin: 0 auto 0; 
  color: #000000;
  letter-spacing: 16rpx;
  background: #ffffff;
}
form{
  display: block;
  width: 510rpx;  
  padding:60rpx;
  font-size:22rpx;
  line-height: 36rpx;
  border-radius: 12rpx;
  background-color: #ffffff;
  margin: 150rpx auto 100rpx;
}
.row text{
  text-align: left;
  display: block;
  width: 190rpx;
  font-size: 36rpx;
  color: #9e9e9e;
  flex-grow: 1;
}
.row text.textarea{
  position: relative;
  top: -130rpx;
}
.row textarea {
  width: 370rpx;
  font-size: 36rpx;
  background-color: #e3e3e3;
  border-radius: 6rpx;
  text-align: left;
}
.row input{
  width: 368rpx;
  height: 65rpx;
  font-size: 18rpxrem;
  color: #000000;
  background-color: #e3e3e3;
  flex-grow: 3;
  display: inline-block;
  border-radius: 6rpx;
  padding: 6rpx;
  text-align: center;
}
.row picker view{
  width: 330rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 18rpxrem;
  color: #000000;
  background-color: #e3e3e3;
  flex-grow: 3;
  display: inline-block;
  border-radius: 6rpx;
  padding: 6rpx;
  text-align: center;
}
.row button{
    padding: 0 48rpx;
    font-size: 32rpx;
    background-color: #00a0e9;
}